<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.rahmandaafrialdi_1202150065_modul1.TotalPesanan"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Makan Malam"
        android:textAlignment="center"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/tv_restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eatbus"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Menu"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nasi Uduk"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Porsi"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_portion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Harga"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rp. 100000"
        android:textAlignment="center"
        android:textSize="30sp" />

</LinearLayout>
